	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="supportername" type="radio" default="1" label="Show/hide supporter name" description="Show Supporter name or not">			
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="display" type="radio" default="1" label="With address or not" description="Show status of supporter with address beside or not">			
					<option value="0">Icon only</option>
					<option value="1">With address</option>
				</field>
				<field name="yahoo" type="radio" default="1" label="Show yahoo status" description="Show/Hide yahoo status of supporter">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="skype" type="radio" default="1" label="Show skype status" description="Show/Hide skype status of supporter">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="aim" type="radio" default="1" label="Show aim status" description="Show/Hide aim status of supporter">
