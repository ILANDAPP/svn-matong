					<option value="1">Show</option>
				</field>
				<field name="icq" type="radio" default="1" label="Show icq status" description="Show/Hide icq status of supporter">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="tel" type="radio" default="1" label="Show Telephone number" description="Show/Hide Telephone number of supporter">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
				<field name="email" type="radio" default="1" label="Show email address" description="Show/Hide email address of supporter">
					<option value="0">Hide</option>
					<option value="1">Show</option>
				</field>
			<field name="support1" type="text" default="" label="Support Name 1" description="Name of supporter like admin, sales, or technical ..."></field>
			<field name="yahoo1" type="text" default="" label="Yahoo ID 1" description="Yahoo ID of supporter 1"></field>
